<h1 class="py-3">{{title}}</h1>

{{!-- add a new category button --}}
{{#if user}}
<a class="btn btn-success mt-3" href="/category/add">Add a new category</a>
{{/if}}

{{!-- category list --}}
<table class="table table-hover table-striped my-3">
    <thead class="thead-dark">
        <tr>
            <th>Category</th>
            {{#if user}}
            <th></th>
            {{/if}}
        </tr>
    </thead>
    <tbody>
        {{#each dataset}}
            <tr>
                <td>{{this.name}}</td>
                {{!-- delete category button --}}
                {{#if ../user}}
                <td>
                    <a href="/category/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDeletion()">Delete</a>
                </td>
                {{/if}}
            </tr>
        {{/each}}
    </tbody>
</table>
