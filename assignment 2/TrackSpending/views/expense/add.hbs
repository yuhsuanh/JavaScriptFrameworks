<h1 class="py-3">{{title}}</h1>

{{!-- get categories from router --}}
<script>
    var categories = {{{ categories }}};
</script>

{{!-- add form --}}
<form method="POST" class="pt-3">
    {{!-- Fields --}}
    <fieldset>
        <label for="store" class="col-2">Store:</label>
        <input name="store" id="store" required>
    </fieldset>

    <fieldset>
        <label for="date" class="col-2">Date:</label>
        <input name="date" id="date" type="date" required>
    </fieldset>

    {{!-- item list --}}
    <fieldset>
        {{!-- add a new item to table--}}
        <button class="btn btn-success" type="button" onclick="addItemRow()">add a new item</button>
        <table class="table table-hover">
            <thead>
                <tr class="table-secondary">
                    <th>Item</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Amount</th>
                    <th>Total Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{!-- new item here --}}
            </tbody>
        </table>
    </fieldset>

    {{!-- total of the expense --}}
    <fieldset>
        <label for="total" class="col-2">Total:</label>
        <input name="total" id="total" readonly>
    </fieldset>

    {{!-- Button --}}
    <button class="offset-11 btn btn-primary" type="submit">Save</button>
</form>
