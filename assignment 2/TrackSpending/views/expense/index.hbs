<h1 class="py-3">{{title}}</h1>

{{!-- add expense button --}}
{{#if user}}
<a class="btn btn-success mt-3" href="/expense/add">Add a new expense</a>
{{/if}}

{{!-- expense list --}}
<table class="table table-hover table-striped my-3">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>Store</th>
            <th>Amount of Item</th>
            <th>Total</th>
            {{#if user}}
                <th></th>
            {{/if}}
        </tr>
    </thead>
    <tbody>
        {{#each dataset}}
            <tr>
                <td>{{dateFormat this.date "YYYY/MM/DD"}}</td>
                <td>{{this.storeName}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.total}}</td>

                {{#if ../user}}
                    <td>
                        <a href="/expense/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/expense/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDeletion()">Delete</a>
                    </td>
                {{/if}}
            </tr>
        {{/each}}
    </tbody>
</table>
